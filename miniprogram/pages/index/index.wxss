/* 页面整体的样式 */
page {
  background-color: #f0f2f5;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
    "Helvetica Neue", Arial, sans-serif;
  min-height: 100vh;
}

.container {
  padding: 30rpx 20rpx;
}

/* 经典列表的样式 */
.scripture-item {
  background: linear-gradient(145deg, #ffffff, #f8f9fa);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: 1px solid rgba(255, 255, 255, 0.8);
}

.scripture-item:active {
  transform: scale(0.98);
}

.scripture-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
  letter-spacing: 0.5rpx;
}

.scripture-stats {
  font-size: 26rpx;
  color: #5a6c7d;
  margin-bottom: 20rpx;
  display: flex;
  gap: 30rpx;
}

.scripture-stats text {
  background: rgba(0, 123, 255, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

/* 按钮样式 */
button {
  background-color: #4caf50;
  color: white;
  border: none;
  padding: 10px 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 14px;
  margin: 4px 2px;
  border-radius: 5px;
  transition: background-color 0.3s;
}

button:active {
  background-color: #45a049;
}

.add-button {
  background: linear-gradient(135deg, #007bff, #0056b3);
  color: white;
  border-radius: 50rpx;
  padding: 15rpx 40rpx;
  font-size: 28rpx;
  line-height: 1.2;
  margin-top: 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 123, 255, 0.3);
  transition: all 0.3s ease;
  border: none;
}

.add-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 123, 255, 0.2);
}

/* 重置按钮的特殊样式 */
.reset-button {
  background: linear-gradient(135deg, #dc3545, #c82333);
  color: white;
  border-radius: 50rpx;
  padding: 15rpx 40rpx;
  font-size: 28rpx;
  line-height: 1.2;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 15rpx rgba(220, 53, 69, 0.3);
  transition: all 0.3s ease;
  width: 60%;
  margin: 40rpx auto;
}

.reset-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(220, 53, 69, 0.2);
}

/* 当前日期样式 */
.current-date {
  font-size: 26rpx;
  color: #8795a1;
  margin: 30rpx 0;
  text-align: center;
  display: block;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 登录页面样式 */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
  padding: 40rpx;
}

.avatar-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 40rpx;
  background: #fff;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.login-tips {
  font-size: 32rpx;
  color: #2c3e50;
  margin-bottom: 60rpx;
  font-weight: 500;
}

.login-button {
  background: linear-gradient(135deg, #4caf50, #45a049);
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.login-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(76, 175, 80, 0.2);
}
