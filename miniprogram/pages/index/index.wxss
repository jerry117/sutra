/* 页面整体的样式 */
page {
  background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  min-height: 100vh;
  padding-top: env(safe-area-inset-top);
}

/* 全局样式 */
.container {
  padding: 80rpx 50rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

.scriptures-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

/* 经典列表的样式 */
.scripture-item {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 32rpx;
  padding: 60rpx 50rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08), 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  min-height: 360rpx;
  margin-bottom: 100rpx;
}

.scripture-item:last-child {
  margin-bottom: 0;
}

.scripture-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06), 0 1rpx 4rpx rgba(0, 0, 0, 0.03);
}

.scripture-info {
  text-align: center;
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 40rpx;
}

.scripture-name {
  font-size: 64rpx;
  color: #1a1a1a;
  margin-bottom: 40rpx;
  font-weight: 700;
  letter-spacing: 12rpx;
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
  line-height: 1.3;
}

.scripture-stats {
  font-size: 32rpx;
  color: #666;
  display: flex;
  justify-content: center;
  gap: 30rpx;
  flex-wrap: wrap;
}

.scripture-stats text {
  background: linear-gradient(135deg, rgba(26, 173, 25, 0.12) 0%, rgba(26, 173, 25, 0.06) 100%);
  padding: 14rpx 32rpx;
  border-radius: 50rpx;
  font-weight: 600;
  border: 1rpx solid rgba(26, 173, 25, 0.2);
  color: #1aad19;
}

/* 登录页面样式 */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.avatar-placeholder {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.12), 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.login-tips {
  font-size: 34rpx;
  color: #333;
  margin-bottom: 60rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.login-button {
  background: linear-gradient(135deg, #1aad19 0%, #15931a 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 64rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 12rpx 28rpx rgba(26, 173, 25, 0.3), 0 4rpx 12rpx rgba(26, 173, 25, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  letter-spacing: 2rpx;
}

.login-button::after {
  border: none;
}

.login-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 16rpx rgba(26, 173, 25, 0.25), 0 2rpx 8rpx rgba(26, 173, 25, 0.15);
}

/* 阅读按钮样式 */
.read-button {
  background: linear-gradient(135deg, #1aad19 0%, #15931a 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 28rpx 64rpx;
  font-size: 34rpx;
  font-weight: 600;
  box-shadow: 0 10rpx 24rpx rgba(26, 173, 25, 0.28), 0 4rpx 12rpx rgba(26, 173, 25, 0.18);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-width: 240rpx;
  letter-spacing: 3rpx;
  margin-top: auto;
}

.read-button::after {
  border: none;
}

.read-button:active {
  transform: scale(0.96) translateY(2rpx);
  box-shadow: 0 6rpx 16rpx rgba(26, 173, 25, 0.22), 0 2rpx 8rpx rgba(26, 173, 25, 0.14);
}
