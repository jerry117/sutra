.sutra-container {
  padding: 30rpx;
  background: #f9f6f2;
  height: calc(
    100vh - env(safe-area-inset-top) - 88rpx
  ); /* 适配不同机型顶部安全距离 */
  box-sizing: border-box;
  padding-top: env(safe-area-inset-top); /* 适配不同机型顶部安全距离 */
}

.sutra-content {
  font-size: 32rpx;
  line-height: 2;
  color: #2c3e50;
  padding-bottom: 120rpx;
  letter-spacing: 2rpx;
}

/* 完成按钮样式 */
.finish-button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.finish-button {
  background: linear-gradient(135deg, #4caf50, #45a049);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  box-shadow: 0 8rpx 16rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.finish-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(76, 175, 80, 0.2);
}

.paragraph {
  margin-bottom: 40rpx;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.7);
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.guide-text {
  text-align: center;
  color: #666;
  font-size: 24rpx;
  padding: 16rpx 32rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 0.9);
}

.guide-icon {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #666;
  border-right: 4rpx solid #666;
  transform: rotate(-45deg);
  margin: 0 auto 8rpx;
  animation: bounce 1.5s infinite;
}

@keyframes bounce {
  0%,
  100% {
    transform: translateY(0) rotate(-45deg);
  }
  50% {
    transform: translateY(-6rpx) rotate(-45deg);
  }
}

.today-count {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}
